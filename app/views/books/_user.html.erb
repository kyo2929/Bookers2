
<h2>User Info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to "koko", edit_user_path(user.id) %>
  </div>

<h2 class="mt-3">New book</h2>

      <% if book.errors.any? %>
        <%= book.errors.count%>件のエラーが発生しました。
        <ul>
          <%= book.errors.full_message.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
