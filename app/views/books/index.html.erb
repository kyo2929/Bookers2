<h2>User Info</h2>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  
  <h4>Option</h4>
    <%= f.text_area :budy %><br>
    
  <%= f.submit 'Create Book' %>
<% end %>