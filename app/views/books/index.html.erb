<h2>User Info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
      </tr>
    </tbody>
  </table>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr><%= image_tag @user.get_profile_image(80, 80) %></tr>
    <tr><%= book.title %></tr>
    <tr><%= book.body %></tr>
  </tbody>
  <% end %>
</table>
