<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Users Info</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました%>
        <ul>
          <%= @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %><br>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction %><br>
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
