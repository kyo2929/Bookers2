<%= render 'user', user: @user, book: @book_new %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <% @book.each do |book| %>
  <tbody>
    <tr>
      <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>