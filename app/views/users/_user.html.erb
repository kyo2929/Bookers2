<h2>User Info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to "koko", edit_user_path(user.id) %>

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    
  <%= f.submit 'Create Book' %>
<% end %>
